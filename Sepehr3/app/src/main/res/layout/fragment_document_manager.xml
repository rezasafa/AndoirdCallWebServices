<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDocumentManager">

    <RelativeLayout
        style="@style/matchScale"
        >
        <Button
            style="@style/Button"
            android:id="@+id/fdm_btnFilter"
            android:text="@string/sFilter"
            android:layout_alignParentTop="true"
            />
        <ListView
            style="@style/matchScale"
            android:layout_below="@+id/fdm_btnFilter"
            android:id="@+id/fdm_List"
            android:layout_above="@+id/fdm_rl"
            >
        </ListView>
        <RelativeLayout
            style="@style/matchScale"
            android:layout_height="70dp"
            android:id="@+id/fdm_rl"
            android:background="@color/colorCustomerCancel"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                style="@style/matchScale"
                android:id="@+id/fdm_rlTop"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    style="@style/matchScale.half2part.center"
                    android:id="@+id/fdm_center1"/>
                <TextView
                    style="@style/Lable.TextCenter"
                    android:layout_toRightOf="@+id/fdm_center1"
                    android:id="@+id/fdm_Debit"/>
                <TextView
                    style="@style/Lable.TextCenter"
                    android:layout_toLeftOf="@+id/fdm_center1"
                    android:id="@+id/fdm_Credit"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>